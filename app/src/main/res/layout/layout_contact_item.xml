<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/view_padding_vertical"
    android:paddingBottom="@dimen/view_padding_vertical"
    android:paddingStart="@dimen/view_padding_horizontal"
    android:paddingEnd="@dimen/view_padding_horizontal"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/thumbnailView"
        android:layout_width="@dimen/thumbnail_width"
        android:layout_height="@dimen/thumbnail_height"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/ic_new_contact"
        tools:ignore="contentDescription" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/view_margin_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fullNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal|bold"
            tools:text="James Bond" />

        <TextView
            android:id="@+id/phoneNumberView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/action_margin_vertical"
            android:textColor="@color/textColorSecondary"
            tools:text="936-99-92" />
    </LinearLayout>


</LinearLayout>