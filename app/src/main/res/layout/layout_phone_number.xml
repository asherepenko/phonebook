<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/phone_margin_top"
    android:paddingBottom="@dimen/phone_margin_bottom"
    android:paddingStart="@dimen/phone_margin_horizontal"
    android:paddingEnd="@dimen/phone_margin_horizontal"
    android:foreground="?attr/selectableItemBackgroundBorderless">

    <com.sherepenko.phonebook.views.CompatTextView
        android:id="@+id/phoneNumberView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawablePadding="@dimen/phone_padding"
        android:textSize="@dimen/phone_text_size"
        app:drawableStartCompat="@drawable/ic_phone"
        tools:text="936-99-92" />
</FrameLayout>